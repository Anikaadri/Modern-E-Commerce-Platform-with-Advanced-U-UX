{
    "name": "online-shop/online-shop",
    "description": "A modern e-commerce platform built with PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Online Shop Team",
            "email": "dev@onlineshop.local"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "classmap": [
            "src/controllers/",
            "src/models/",
            "src/services/"
        ]
    },
    "scripts": {
        "test": "phpunit tests/",
        "lint": "phpcs src/ --standard=PSR12",
        "analyze": "phpstan analyse src/"
    }
}
